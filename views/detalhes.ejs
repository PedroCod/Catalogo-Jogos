      </ul>
    </nav>
  </article>

  <header>
    <h1> Detalhes do Jogo </h1>
  </header>

  <section id="detalhes">
    <div class=card-detalhes>
      <ul>
        <li>Nome: <%= jogo.nome %></li>
        <img src="<%= jogo.imagem %>" width=500>
        <li>Genero: <%= jogo.genero %></li>
        <li>Descrição: <%= jogo.descricao %></li>
        <form action="/deletar/<%= jogo.id %>" method="POST">
          <input type="hidden" name="_method" value="DELETE"> 
          <input type="hidden" name="_token" value="the_token">
          <button type="submit" class="btn btn-link" onclick="if (!confirm('Are you sure?')) { return false }"><span>Delete</span></button>
        </form>
      </ul>
    </div>
  </section>

